# --- Core --------------------------------------------------------------------
MONGO_URL=

SECRET_KEY=

# 표시용 시간대(서버 연산은 UTC 고정)
TIMEZONE=Asia/Seoul

# 퍼블릭 베이스 URL (슬래시 없음)
BASE_URL=http://localhost:5000

# 기본 언어(fallback)
DEFAULT_LANG=ko

# CORS 허용 Origin(콤마 구분, 공백 없이)
ALLOWED_ORIGINS=http://localhost:5000

# --- SMTP / 알림 채널 ---------------------------------------------------------
# 메일 발송 설정(필요 시만 입력)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# 클라이언트 표시용 채널 허용 목록(콤마 구분): email,sms,kakao
ALERT_CHANNELS=email,sms,kakao

# --- 네이버 지도 --------------------------------------------------------------
# 서버에서 주입하는 클라이언트 인증 정보(도메인 제한 필수)
NAVER_MAP_CLIENT_ID=
NAVER_MAP_CLIENT_SECRET=

# --- 예약/주문 정책 -----------------------------------------------------------
# 예약 리마인더: 시작 N시간 전
REMINDER_BEFORE_HOURS=24

# 무통장 주문 만료 시간(시간 단위)
ORDER_EXPIRE_HOURS=48

# 재고 정책: hold | deduct_on_paid
INVENTORY_POLICY=hold

# --- 업로드 정책 --------------------------------------------------------------
# 업로드 허용 최대 용량(MB)
UPLOAD_MAX_SIZE_MB=10

# 허용 확장자(콤마 구분, 소문자)
UPLOAD_ALLOWED_EXTS=jpg,jpeg,png,webp,pdf

# --- 보안/레이트리밋/헤더 ------------------------------------------------------
# 분당 요청 제한(세션/IP 기준)
RATE_LIMIT_PER_MIN=60

# 콘텐츠 보안 정책 활성화 여부(true|false)
CSP_ENABLE=true